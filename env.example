# Fortisel Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=3000
API_PREFIX=api

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MongoDB connection string
# Format: mongodb://username:password@host:port/database
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/fortisel

# Database connection options
MONGODB_MAX_POOL_SIZE=10
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000
MONGODB_SOCKET_TIMEOUT_MS=45000

# ===========================================
# JWT AUTHENTICATION
# ===========================================
# Generate a strong JWT secret (minimum 32 characters)
# Use: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8081,http://localhost:19006

# ===========================================
# PAYMENT PROVIDERS
# ===========================================
# Paystack Configuration
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key
PAYSTACK_WEBHOOK_SECRET=your_paystack_webhook_secret

# MoMo Configuration
MOMO_API_KEY=your_momo_api_key
MOMO_WEBHOOK_SECRET=your_momo_webhook_secret

# ===========================================
# GOOGLE OAUTH
# ===========================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/users/auth/google/callback

# ===========================================
# EMAIL SERVICE (Resend)
# ===========================================
# Resend API Configuration
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_FROM=noreply@fortisel.com

# ===========================================
# SMS SERVICE
# ===========================================
# Twilio Configuration (example)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# REDIS CONFIGURATION (for caching)
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Rate limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Request size limits
MAX_REQUEST_SIZE=10mb

# Session configuration
SESSION_SECRET=your-session-secret-key

# ===========================================
# MONITORING & HEALTH CHECKS
# ===========================================
HEALTH_CHECK_TIMEOUT=5000
METRICS_ENABLED=true

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# ===========================================
# NOTIFICATION CONFIGURATION
# ===========================================
# Push notification service
FCM_SERVER_KEY=your_fcm_server_key

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Map service API key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Weather service API key
WEATHER_API_KEY=your_weather_api_key
